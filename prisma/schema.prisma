generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  email     String   @unique
  password  String

  firstname String?
  lastname  String?

  role      String   @default("USER")

  attendances Attendance[]
  @@map("users")
}

model Attendance {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId    Int

  //attenance details
  date      DateTime
  status    String
  latitude  Float
  longitude Float

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@map("attendances")
}